{
    "name": "Linksnip",
    "description": "Copies a minimal link from the address bar into the clipboard.",
    "version": "0.0.0.4",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/img/linksnip16.png",
            "32": "/img/linksnip32.png",
            "48": "/img/linksnip48.png",
            "128": "/img/linksnip128.png"
        }
    },
    "icons": {
        "16": "/img/linksnip16.png",
        "32": "/img/linksnip32.png",
        "48": "/img/linksnip48.png",
        "128": "/img/linksnip128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            },
            "description": "Copy shortened link to clipboard"
        }
    },
    "permissions": ["clipboardWrite", "tabs"]
}
